@{
}
@model Furniture

<h2>Add a new furniture</h2>

<form asp-action="AddFurnitureForm" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label>Furniture ID:</label><input asp-for="FurnitureID" class="form-control" placeholder="Product ID " />
    </div>

    <div class="form-group">
        <label>Name:</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" placeholder="Product's Name" />

    </div>

    <div class="form-group">
        <label>Description:</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control" placeholder="Product's Description"></textarea>
    </div>

    <div class="form-group">
        <label>Price $:</label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Category:</label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control" placeholder="Category" />
    </div>


    <div class="checkbox">
        <label>
            <input asp-for="Shipping" /> Shipping
        </label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Add new product" />
    </div>
</form>

